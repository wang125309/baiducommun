include ./lib/header.jade
link(href="/static/public/css/phoneCode.css",rel="stylesheet",type="text/css")
script(src="/static/public/js/phoneCode.min.js",language="javascript")
body(ng-app,ng-controller="phoneCodeCtrl",ng-cloak)
    section.body
        div.line
            div.line-first 手机号：
            div.line-second
                input.phone(type="text",maxlength=11,placeholder="请输入您的手机号",value="{{ phoneNumber }}")
        div.line
            div.line-first 验证码：
            div.line-second
                input.phone-code(type="text",maxlength=6,placeholder="请输入验证码",value="{{ code }}")
                button.baidu-btn.getCode(type="button",ng-click="getCode()") 获取验证码({{ time }}s)
        div.line
            button.baidu-btn.sure(type="button",ng-click="bind()") {{ bindText }}
